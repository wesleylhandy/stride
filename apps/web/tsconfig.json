{
  "extends": "../../packages/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@stride/ui": ["../../packages/ui/src"],
      "@stride/database": ["../../packages/database/src"],
      "@stride/types": ["../../packages/types/src"],
      "@stride/yaml-config": ["../../packages/yaml-config/src"]
    },
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.e2e.spec.ts",
    "**/*.integration.test.tsx",
    "playwright.config.ts",
    "vitest.config.ts",
    "vitest.setup.ts"
  ]
}

