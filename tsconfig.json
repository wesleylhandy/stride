{
  "extends": "./packages/tsconfig/base.json",
  "compilerOptions": {
    "paths": {
      "@stride/ui": ["./packages/ui/src"],
      "@stride/database": ["./packages/database/src"],
      "@stride/types": ["./packages/types/src"],
      "@stride/yaml-config": ["./packages/yaml-config/src"],
      "@stride/ai-gateway": ["./packages/ai-gateway/src"],
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": ["node_modules", "dist", "build", ".next"]
}
